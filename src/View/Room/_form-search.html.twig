<div class="row m-2">

    <div class="col d-flex justify-content-center align-items-center border-right border-dark">
        <form method="post" action="/room/search">
            <div class="form-group">
                <label for="roomName">Nom de la chambre</label>
                <input class="form-control" id="roomName" type="text" name="roomName" >
            </div>
            <button type="submit" class="btn btn-primary">Rechercher une chambre</button>
        </form>
    </div>

    <div class="col d-flex justify-content-center">
        <form method="post" action="/room/search">
            <div class="form-group">
                <label for="priceSelect">Catégorie de prix</label>
                <select class="form-control" id="priceSelect" name="priceId">
                    <option value="0">Choisissez une catégorie de prix</option>
                    {% for price in prices %}
                        <option value="{{ price.id }}">{{ price.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="bedSelect">Nombre de lits minimum</label>
                <select class="form-control" id="bedSelect" name="bed">
                    <option value="0">Choisissez un nombre minimum de lits</option>
                    {% for bed in 1 .. maxBed %}
                        <option value="{{ bed }}">{{ bed }}</option>
                    {% endfor %}
                </select>
            </div>
            <button type="submit" class="btn btn-primary align-self-center">Rechercher</button>
        </form>
    </div>

</div>