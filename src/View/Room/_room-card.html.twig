<div class="row">
    <div class="col">
        <div class="card">
            <div id="carousel{{ room.id }}" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src ="https://images.pexels.com/photos/67636/rose-blue-flower-rose-blooms-67636.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" class="d-block w-100" alt="placeholder">
                    </div>
                    {% for picture in pictures %}
                        {% if picture.id_room is same as (room.id) %}
                        <div class="carousel-item">
                            <img src="{{ picture.image }}" class="d-block w-100" alt="{{ picture.description }}">
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carousel{{ room.id }}" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel{{ room.id }}" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        <h5 class="card-title">{{ room.name }}</h5>
        <div class="card-text">
            <p>{{ room.description }}</p>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Prix été*</th>
                <th scope="col">Prix hiver*</th>
                <th scope="col">Theme</th>
                <th scope="col">Vue</th>
            </tr>
            </thead>

            <tbody>
            <tr>
                <td>{{ room.priceSummer }} €</td>
                <td>{{ room.priceWinter }} €</td>
                <td>{{ room.theme }}</td>
                <td>{{ room.view }}</td>
            </tr>
            </tbody>
        </table>

            <p style="font-size: small">*les prix sont indiqués par nuit et par personne</p>
        </div>
    </div>
</div>
