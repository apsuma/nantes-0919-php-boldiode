<div class="col-lg-10 offset-lg-1 my-4">
    <div class="card d-lg-flex flex-lg-row">

        <div class="carousel-large">
            <div id="carousel{{ room.roomId }}" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src ="{{ constant('App\\Service\\ImageUploader::PUBLIC_PATH')~"/"~room.images.0.image }}" class="d-block w-100" alt="image d'une chambre">
                    </div>
                    {% for picture in room.images if picture.image != room.images.0.image %}
                    <div class="carousel-item">
                        <img src ="{{ constant('App\\Service\\ImageUploader::PUBLIC_PATH')~"/"~picture.image }}" class="d-block w-100" alt="image d'une chambre">
                    </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carousel{{ room.roomId }}" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel{{ room.roomId }}" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="d-lg-flex flex-lg-column flex-lg-fill p-lg-3">
            <h5 class="card-title">{{ room.roomName }}</h5>
            <div class="card-text">
                <p>{{ room.description }}</p>
            </div>
            <table class="table mt-auto">
                <thead>
                <tr>
                    <th scope="col">Prix été*</th>
                    <th scope="col">Prix hiver*</th>
                    <th scope="col">Nb lits</th>
                    <th scope="col">Theme</th>
                    <th scope="col">Vue</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ room.priceSummer }} €</td>
                    <td>{{ room.priceWinter }} €</td>
                    <td>{{ room.nbBed }}</td>
                    <td>{{ room.themeName }}</td>
                    <td>{{ room.viewName }}</td>
                </tr>
                </tbody>
            </table>
            <p style="font-size: small">*les prix sont indiqués par nuit et par personne</p>
        </div>
    </div>
</div>
