<form method="post">
    <input type="hidden" value="{{ room.id }}" name="id">
    <div class="form-group">
        <label for="picture">Image chambre</label>
        <input type="url" id="picture" class="form-control" value="{{ picture.image }}" name="image">
    </div>
    <div class="form-group">
        <label for="name">Nom chambre</label>
        <input type="text" id="name" class="form-control" value="{{ room.name }}" name="name">
    </div>
    <div class="form-group">
        <label for="description">Description Chambre</label>
        <input type="text" id="description" class="form-control" value="{{ room.description }}" name="description">
    </div>
    <div class="form-group">
        <label for="nb_bed">Nombre de lits</label>
        <input type="text" id="nb_bed" class="form-control" value="{{ room.nb_bed }}" name="nb_bed">
    </div>
    <div class="form-group">
        <label for="surface">Surface</label>
        <input type="text" id="surface" class="form-control" value="{{ room.surface }}" name="surface">
    </div>
    <div class="form-group">
        <label for="id_price">Prix</label>
        <select id="id_price" name="id_price" class="form-control">
            <option value="" disabled selected>Choisir un prix</option>
            {% for price in prices %}
                <option value="{{ price.id }}">{{ price.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="id_view">Vue</label>
        <select id="id_view" name="id_view" class="form-control">
            <option value="" disabled selected>Choisir une vue</option>
            {% for view in views %}
                <option value="{{ view.id }}">{{ view.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="id_theme">Theme</label>
        <select id="id_theme" name="id_theme" class="form-control">
            <option value="" disabled selected>Choisir un theme</option>
            {% for theme in themes %}
                <option value="{{ theme.id }}">{{ theme.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-check">
        <input type="checkbox" id="front_page" name="front_page" class="form-check-input" value=1>
        <label class="form-check-label" for="front_page">
            Chambre du moment
        </label>
    </div>
    <br>
    <input type="submit" class="btn btn-primary" value="Valider">
</form>
