<form action="/Contact/sendMail" method="post">
    <div class="form-group row">
        <label for="contactName" class="col-sm-3 col-form-label">Nom :</label>
        <input
           type="text"
           class="form-control-sm-9 {{ (contactNameError is null) ? '':'is-invalid' }}"
           id="contactName"
           value="{{ (contactNameError is null) ? contactForm.contactName }}"
           name="contactName"
           required
        >
    </div>
    <div class="form-group row">
        <label for="subject" class="col-sm-3 col-form-label">Sujet :</label>
        <input
            type="text"
            class="form-control-sm-9 {{ (subjectError is null) ? '':'is-invalid' }}"
            id="subject"
            value="{{ (subjectError is null) ? contactForm.subject }}"
            name="subject"
            required
        >
    </div>
    <div class="form-group row">
        <label for="phone" class="col-sm-3 col-form-label">Telephone :</label>
        <input
            type="number"
            class="form-control-sm-9 {{ (phoneError is null) ? '':'is-invalid' }}"
            id="phone"
            value="{{ (phoneError is null) ? contactForm.phone }}"
            name="phone"
            required
        >
    </div>
    <div class="form-group row">
        <label for="contactEmail" class="col-sm-3 col-form-label">Email :</label>
        <input
            type="email"
            class="form-control-sm-9 {{ (contactPhoneError is null) ? '':'is-invalid' }}"
            id="contactEmail"
            value="{{ (contactPhoneError is null) ? contactForm.contactEmail }}"
            name="contactEmail"
        >
    </div>
    <div class="form-group row">
        <label for="content" class="col-sm-3 col-form-label">Message :</label>
        <textarea
            name="content" class="form-control-sm-9"  id="content" rows="3" required>
            {{ (contentError is null) ? contactForm.content }}
        </textarea>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button class="btn btn-primary" type="submit">Send</button>
        </div>
    </div>
</form>