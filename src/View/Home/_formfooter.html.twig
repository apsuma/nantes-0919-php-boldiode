<form action="/Contact/sendMail" method="post">
    <div class="form-group">
        <label for="contactName" >Nom :</label>
        <input
           type="text"
           class="form-control {{ (contactNameError is null) ? '':'is-invalid' }}"
           id="contactName"
           value="{{ (contactNameError is null) ? contactForm.contactName }}"
           name="contactName"
           required
        >
    </div>
    <div class="form-group">
        <label for="subject" >Sujet :</label>
        <input
            type="text"
            class="form-control {{ (subjectError is null) ? '':'is-invalid' }}"
            id="subject"
            value="{{ (subjectError is null) ? contactForm.subject }}"
            name="subject"
            required
        >
    </div>
    <div class="form-group">
        <label for="phone" >Telephone :</label>
        <input
            type="number"
            class="form-control {{ (phoneError is null) ? '':'is-invalid' }}"
            id="phone"
            value="{{ (phoneError is null) ? contactForm.phone }}"
            name="phone"
            required
        >
    </div>
    <div class="form-group">
        <label for="contactEmail" >Email :</label>
        <input
            type="email"
            class="form-control {{ (contactPhoneError is null) ? '':'is-invalid' }}"
            id="contactEmail"
            value="{{ (contactPhoneError is null) ? contactForm.contactEmail }}"
            name="contactEmail"
        >
    </div>
    <div class="form-group">
        <label for="content" >Message :</label>
        <textarea
            name="content" class="form-control"  id="content" rows="3" required>
            {{ (contentError is null) ? contactForm.content }}
        </textarea>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Send</button>
    </div>
</form>