<form action="/Contact/sendMail" method="post">
    <div class="form-group row justify-content-center">
        <label for="contactName" class="col-sm-3 col-form-label">Nom</label>
        <input
           type="text"
           class="form-control-sm-9 {{ (contactNameError is null) ? '':'is-invalid' }}"
           id="contactName"
           value="{{ (contactNameError is not null) ? '': contactForm.contactName }}"
           name="contactName"
           required
        >
    </div>
    <div class="form-group row justify-content-center">
        <label for="subject" class="col-sm-3 col-form-label">Sujet</label>
        <input
            type="text"
            class="form-control-sm-9 {{ (subjectError is null) ? '':'is-invalid' }}"
            id="subject"
            value="{{ (subjectError is not null) ? '': contactForm.subject }}"
            name="subject"
            required
        >
    </div>
    <div class="form-group row justify-content-center">
        <label for="phone" class="col-sm-3 col-form-label">Tel.</label>
        <input
            type="tel"
            class="form-control-sm-9 {{ (phoneError is null) ? '':'is-invalid' }}"
            id="phone"
            value="{{ (phoneError is not null) ? '': contactForm.phone }}"
            name="phone"
            required
        >
    </div>
    <div class="form-group row justify-content-center">
        <label for="contactEmail" class="col-sm-3 col-form-label">Email</label>
        <input
            type="email"
            class="form-control-sm-9 {{ (contactPhoneError is null) ? '':'is-invalid' }}"
            id="contactEmail"
            value="{{ (contactEmailError is not null) ? '': contactForm.contactEmail }}"
            name="contactEmail"
        >
    </div>
    <div class="form-group row justify-content-center">
        <label for="content" class="col-sm-3 col-form-label">Message</label>
        <textarea
            name="content" class="form-control-sm-9"  id="content" rows="1" required>{{ (contentError is not null) ? '': contactForm.content }}</textarea>
    </div>
    <div class="form-group row justify-content-center">
            <button class="btn btn-primary col-4" type="submit">Send</button>
    </div>
</form>