<form action="/Contact/sendMail" method="post">
    <div class="form-group">
        <label for="contactName" >Nom :</label>
        <input type="text" class="form-control" id="contactName" value="{{ contactForm.contactName }}" name="contactName" required >
    </div>
    <div class="form-group">
        <label for="subject" >Sujet :</label>
        <input type="text" class="form-control" id="subject" value="{{ contactForm.subject }}" name="subject" required >
    </div>
    <div class="form-group">
        <label for="phone" >Telephone :</label>
        <input type="number" class="form-control" id="phone" value="{{ contactForm.phone }}" name="phone" required >
    </div>
    <div class="form-group">
        <label for="contactEmail" >Email :</label>
        <input type="email" class="form-control" id="contactEmail" value="{{ contactForm.contactEmail }}" name="contactEmail" >
    </div>
    <div class="form-group">
        <label for="content" >Message :</label>
        <textarea name="content" class="form-control" id="content" rows="3" required>{{ contactForm.content }}</textarea>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Send</button>
    </div>
</form>