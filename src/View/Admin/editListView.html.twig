{% extends 'layout.html.twig' %}

{% block navigation %}
    {% include 'Admin/_navigationAdmin.html.twig' %}
{% endblock %}

{% block content %}
    <h1>Liste des vues</h1>

    {% if get.message is defined %}
        <div class="alert alert-primary" role="alert">
            {{ get.message }}
        </div>
    {% endif %}
    <a class="btn btn-success" href="/admin/addView">Ajouter une vue</a>
    <section>
        {% for view in views %}
            <div class="card col-12 col-sm-4">
                <div class="card-body">
                    <h5 class="card-title"><a  class="col-lg-6">{{ view.name }}</a></h5>
                    <a href="/admin/editView/{{ view.id }}" class="btn btn-primary">Modifier</a>
                    <button type="button"
                            class="btn btn-danger"
                            data-toggle="modal"
                            data-target="#deleteConfirmation-{{ view.id }}"
                    >Supprimer</button>
                    <div class="modal fade" id="deleteConfirmation-{{ view.id }}" tabindex="-1" role="dialog"
                         aria-labelledby="deleteConfirmationLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteConfirmationLabel">Etes-vous sûr ?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">Cette suppression est définitive</div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler
                                    </button>
                                    <a href="/admin/deleteView/{{ view.id }}" class="btn btn-danger">Confirmer</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}

{% block footer %}
{% endblock %}