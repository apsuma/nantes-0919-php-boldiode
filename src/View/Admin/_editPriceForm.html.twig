<form action="/admin/editPrice/{{ price.id }}" method="post">
    <input type="hidden" value="{{ price.id }}" name="id">
    <div class="form-group">
        <label for="name">Cat√©gorie du prix</label>
        <input
                type="text"
                id="name"
                class="form-control {{ (nameError is null) ? '':'is-invalid' }}"
                value="{{ (nameError is not null) ? '' : price.name|e }}"
                name="name"
        >
        <input
                type="number"
                id="price_winter"
                class="form-control {{ (nameError is null) ? '':'is-invalid' }}"
                value="{{ (nameError is not null) ? '' : price.price_winter|e }}"
                name="price_winter"
        >
        <input
                type="number"
                id="price_summer"
                class="form-control {{ (nameError is null) ? '':'is-invalid' }}"
                value="{{ (nameError is not null) ? '' : price.price_summer|e }}"
                name="price_summer"
        >
        <br>
        <input type="submit" class="btn btn-primary" value="Valider">
        <a type="button" class="btn btn-secondary" href="/admin/editListPrice/">Back<a/>
